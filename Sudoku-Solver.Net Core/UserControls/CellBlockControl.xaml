<UserControl x:Class="DaanV2.Sudoku.UserControls.CellBlockControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:DaanV2.Sudoku.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <Border BorderThickness="2">
        <UniformGrid Columns="3" Rows="3">
            <local:CellControl x:Name="C1R1"/>
            <local:CellControl x:Name="C1R2"/>
            <local:CellControl x:Name="C1R3"/>
            <local:CellControl x:Name="C2R1"/>
            <local:CellControl x:Name="C2R2"/>
            <local:CellControl x:Name="C2R3"/>
            <local:CellControl x:Name="C3R1"/>
            <local:CellControl x:Name="C3R2"/>
            <local:CellControl x:Name="C3R3"/>
        </UniformGrid>
    </Border>
</UserControl>
